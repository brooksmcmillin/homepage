{
  "manifest_version": 2,
  "name": "Homepage",
  "version": "1.2.1",
  "description": "New tab page showing today's tasks and RSS feed",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": ["https://todo.brooksmcmillin.com/*", "alarms"],
  "background": {
    "scripts": ["utils.js", "background.js"]
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.svg",
      "96": "icons/icon-96.svg"
    },
    "default_title": "Toggle Tasks Sidebar"
  },
  "sidebar_action": {
    "default_panel": "sidebar.html",
    "default_title": "Tasks",
    "default_icon": {
      "48": "icons/icon-48.svg",
      "96": "icons/icon-96.svg"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "homepage@brooksmcmillin.com",
      "strict_min_version": "109.0",
      "update_url": "https://raw.githubusercontent.com/brooksmcmillin/homepage/main/updates.json",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "48": "icons/icon-48.svg",
    "96": "icons/icon-96.svg"
  }
}
